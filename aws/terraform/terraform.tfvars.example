# Esempio di configurazione Terraform per MapReduce su AWS
# Copia questo file come terraform.tfvars e modifica i valori

# Regione AWS
aws_region = "us-east-1"

# Nome del progetto
project_name = "mapreduce"

# Configurazione VPC
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Configurazione istanze EC2
instance_type = "t3.medium"

# Auto Scaling Group
min_instances = 1
max_instances = 5
desired_instances = 2

# Ambiente
environment = "production"

# Tag aggiuntivi
tags = {
  Project     = "MapReduce"
  Environment = "production"
  Owner       = "your-team"
  CostCenter  = "engineering"
}

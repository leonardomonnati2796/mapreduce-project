# S3 Storage Configuration for MapReduce
# Configurazione S3 per il sistema MapReduce su AWS

# S3 Basic Configuration
S3_SYNC_ENABLED=true
S3_SYNC_INTERVAL=60s
AWS_S3_BUCKET=mapreduce-storage
AWS_REGION=us-east-1

# S3 Advanced Configuration
S3_ENCRYPTION_ENABLED=true
S3_VERSIONING_ENABLED=true
S3_LIFECYCLE_ENABLED=true
S3_TRANSFER_ACCELERATION_ENABLED=false

# S3 Backup Configuration
S3_BACKUP_BUCKET=mapreduce-backup
S3_BACKUP_SCHEDULE=0 2 * * *
S3_BACKUP_RETENTION_DAYS=30
S3_BACKUP_ENCRYPTION=true
S3_BACKUP_COMPRESSION=true

# S3 Performance Configuration
S3_UPLOAD_PART_SIZE=67108864
S3_UPLOAD_CONCURRENCY=5
S3_DOWNLOAD_CONCURRENCY=3
S3_MAX_RETRIES=3
S3_TIMEOUT=300s

# S3 Monitoring Configuration
S3_METRICS_ENABLED=true
S3_CLOUDWATCH_METRICS=true
S3_ACCESS_LOGGING_ENABLED=true
S3_LOG_PREFIX=access-logs/

# S3 Security Configuration
S3_SSL_ENABLED=true
S3_FORCE_PATH_STYLE=false
S3_SIGNATURE_VERSION=4
S3_ACL_DEFAULT=private

# S3 Paths Configuration
S3_OUTPUT_PREFIX=output/
S3_INTERMEDIATE_PREFIX=intermediate/
S3_LOGS_PREFIX=logs/
S3_BACKUP_PREFIX=backups/
S3_JOBS_PREFIX=jobs/

# S3 Lifecycle Configuration
S3_LIFECYCLE_TRANSITION_DAYS=30
S3_LIFECYCLE_TRANSITION_STORAGE_CLASS=STANDARD_IA
S3_LIFECYCLE_EXPIRATION_DAYS=365
S3_LIFECYCLE_DELETE_INCOMPLETE_MULTIPART_DAYS=7

# S3 Error Handling
S3_RETRY_ON_ERROR=true
S3_RETRY_MAX_ATTEMPTS=3
S3_RETRY_BACKOFF_MULTIPLIER=2
S3_RETRY_INITIAL_DELAY=1s

# S3 Health Check Configuration
S3_HEALTH_CHECK_ENABLED=true
S3_HEALTH_CHECK_INTERVAL=30s
S3_HEALTH_CHECK_TIMEOUT=10s
S3_HEALTH_CHECK_THRESHOLD=3

# S3 Notification Configuration
S3_NOTIFICATION_ENABLED=false
S3_NOTIFICATION_TOPIC_ARN=
S3_NOTIFICATION_EVENTS=s3:ObjectCreated:*,s3:ObjectRemoved:*

# S3 Cross-Region Configuration
S3_CROSS_REGION_REPLICATION_ENABLED=false
S3_REPLICATION_DESTINATION_BUCKET=
S3_REPLICATION_DESTINATION_REGION=

# S3 Cost Optimization
S3_INTELLIGENT_TIERING_ENABLED=false
S3_STORAGE_CLASS_ANALYSIS_ENABLED=false
S3_INVENTORY_ENABLED=false

# S3 Compliance Configuration
S3_OBJECT_LOCK_ENABLED=false
S3_OBJECT_LOCK_MODE=GOVERNANCE
S3_OBJECT_LOCK_RETENTION_DAYS=30

# S3 Integration Configuration
S3_INTEGRATE_WITH_LOADBALANCER=true
S3_INTEGRATE_WITH_HEALTHCHECK=true
S3_INTEGRATE_WITH_METRICS=true
S3_INTEGRATE_WITH_DASHBOARD=true

# S3 Development Configuration
S3_DEBUG_ENABLED=false
S3_VERBOSE_LOGGING=false
S3_LOG_LEVEL=info
S3_LOG_FORMAT=json

# S3 Production Configuration
S3_PRODUCTION_MODE=true
S3_AUTO_SCALING_ENABLED=true
S3_LOAD_BALANCING_ENABLED=true
S3_FAULT_TOLERANCE_ENABLED=true

# S3 Monitoring and Alerting
S3_ALERT_STORAGE_USAGE_THRESHOLD=80
S3_ALERT_ERROR_RATE_THRESHOLD=5
S3_ALERT_SYNC_FAILURE_THRESHOLD=3
S3_ALERT_EMAIL=admin@example.com

# S3 Dashboard Configuration
S3_DASHBOARD_ENABLED=true
S3_DASHBOARD_PORT=8080
S3_DASHBOARD_PATH=/s3
S3_DASHBOARD_AUTH_REQUIRED=false

# S3 API Configuration
S3_API_ENABLED=true
S3_API_PORT=8081
S3_API_PATH=/api/s3
S3_API_RATE_LIMIT=100
S3_API_TIMEOUT=30s

# S3 Webhook Configuration
S3_WEBHOOK_ENABLED=false
S3_WEBHOOK_URL=
S3_WEBHOOK_SECRET=
S3_WEBHOOK_EVENTS=upload,download,delete,sync

# S3 Cache Configuration
S3_CACHE_ENABLED=true
S3_CACHE_TTL=3600s
S3_CACHE_SIZE=100MB
S3_CACHE_TYPE=memory

# S3 Compression Configuration
S3_COMPRESSION_ENABLED=true
S3_COMPRESSION_ALGORITHM=gzip
S3_COMPRESSION_LEVEL=6
S3_COMPRESSION_MIN_SIZE=1024

# S3 Encryption Configuration
S3_ENCRYPTION_ALGORITHM=AES256
S3_ENCRYPTION_KEY_ID=
S3_ENCRYPTION_CONTEXT=
S3_ENCRYPTION_KMS_KEY_ID=

# S3 Network Configuration
S3_PROXY_ENABLED=false
S3_PROXY_URL=
S3_PROXY_USERNAME=
S3_PROXY_PASSWORD=
S3_PROXY_TIMEOUT=30s

# S3 Authentication Configuration
S3_AUTH_ENABLED=false
S3_AUTH_TYPE=basic
S3_AUTH_USERNAME=
S3_AUTH_PASSWORD=
S3_AUTH_TOKEN=

# S3 Rate Limiting Configuration
S3_RATE_LIMIT_ENABLED=true
S3_RATE_LIMIT_REQUESTS_PER_SECOND=10
S3_RATE_LIMIT_BURST=20
S3_RATE_LIMIT_WINDOW=60s

# S3 Circuit Breaker Configuration
S3_CIRCUIT_BREAKER_ENABLED=true
S3_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
S3_CIRCUIT_BREAKER_TIMEOUT=60s
S3_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30s

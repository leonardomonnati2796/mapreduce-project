# AWS Configuration Environment Variables
# Copy this file to .env and customize the values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Project Configuration
PROJECT_NAME=mapreduce
ENVIRONMENT=prod
VERSION=1.0.0

# EC2 Configuration
INSTANCE_TYPE=t3.medium
MIN_INSTANCES=2
MAX_INSTANCES=10
DESIRED_INSTANCES=3
KEY_PAIR_NAME=mapreduce-key-pair

# Load Balancer Configuration
ALB_NAME=mapreduce-alb
ALB_SCHEME=internet-facing
ALB_TYPE=application
ALB_IP_ADDRESS_TYPE=ipv4

# S3 Configuration
S3_BUCKET_NAME=mapreduce-storage
S3_BACKUP_BUCKET=mapreduce-backup
S3_TERRAFORM_BUCKET=mapreduce-terraform-state

# Database Configuration (if using RDS)
DB_INSTANCE_CLASS=db.t3.micro
DB_ENGINE=postgres
DB_ENGINE_VERSION=13.7
DB_NAME=mapreduce
DB_USERNAME=mapreduce
DB_PASSWORD=

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/aws/ec2/mapreduce
CLOUDWATCH_RETENTION_DAYS=30
ALARM_EMAIL=admin@example.com

# Security Configuration
ALLOWED_CIDR_BLOCKS=0.0.0.0/0
SSH_CIDR_BLOCKS=0.0.0.0/0
HTTP_CIDR_BLOCKS=0.0.0.0/0
HTTPS_CIDR_BLOCKS=0.0.0.0/0

# Application Configuration
APP_PORT=8080
DASHBOARD_PORT=3000
WORKER_PORT=8081
MASTER_PORT=8082

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
DOCKER_COMPOSE_FILE=docker-compose.aws.yml

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Auto Scaling Configuration
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=300
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_THRESHOLD=2
HEALTH_CHECK_UNHEALTHY_THRESHOLD=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Performance Configuration
WORKER_THREADS=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# Security Headers
SECURITY_HEADERS=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERTIFICATE_ARN=
SSL_POLICY=ELBSecurityPolicy-TLS-1-2-2017-01

# VPC Configuration
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_CIDR_1=10.0.1.0/24
PUBLIC_SUBNET_CIDR_2=10.0.2.0/24
PRIVATE_SUBNET_CIDR_1=10.0.10.0/24
PRIVATE_SUBNET_CIDR_2=10.0.20.0/24

# Availability Zones
AZ_1=us-east-1a
AZ_2=us-east-1b

# Tags
TAG_ENVIRONMENT=production
TAG_PROJECT=mapreduce
TAG_OWNER=devops
TAG_COST_CENTER=engineering
# MapReduce Project - Unified Environment Variables
# Copia questo file in .env e personalizza i valori

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# S3 Configuration
S3_BUCKET_NAME=mapreduce-storage
S3_BACKUP_BUCKET=mapreduce-backup
S3_TERRAFORM_BUCKET=mapreduce-terraform-state

# S3 Sync Configuration
S3_SYNC_ENABLED=true
S3_SYNC_INTERVAL=60s

# =============================================================================
# INSTANCE CONFIGURATION
# =============================================================================
# Number of instances
MASTER_COUNT=3
WORKER_COUNT=3

# Instance types
MASTER_INSTANCE_TYPE=t3.medium
WORKER_INSTANCE_TYPE=t3.small

# Instance identification
INSTANCE_ID=local
INSTANCE_IP=localhost

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
# Application ports
MASTER_PORT=8082
WORKER_PORT=8081
DASHBOARD_PORT=8080

# Raft and RPC ports (for local development)
RAFT_PORT=1234
RPC_PORT_BASE=8000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=

# =============================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================
# Service discovery for local development
RAFT_ADDRESSES=master0:1234,master1:1234,master2:1234
RPC_ADDRESSES=master0:8000,master1:8001,master2:8002
WORKER_ADDRESSES=worker1:8081,worker2:8081,worker3:8081

# Master and Worker IPs for local
MASTER_IPS=master0,master1,master2
WORKER_IPS=worker1,worker2,worker3

# Worker count for dynamic reducer configuration
WORKER_COUNT=3

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Environment detection
ENVIRONMENT=local
DEPLOYMENT_ENV=local
LOCAL_MODE=true

# Paths
TMP_PATH=/tmp/mapreduce
MAPREDUCE_INPUT_GLOB=/app/data/*.txt

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090

# CloudWatch (AWS only)
CLOUDWATCH_LOG_GROUP=/aws/ec2/mapreduce
CLOUDWATCH_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# MapReduce timeouts
MAPREDUCE_MASTER_TASK_TIMEOUT=120s
MAPREDUCE_MASTER_HEARTBEAT_INTERVAL=5s
MAPREDUCE_WORKER_RETRY_INTERVAL=2s
MAPREDUCE_WORKER_MAX_RETRIES=10

# WebSocket configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_UPDATE_INTERVAL=5s

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# VPC CONFIGURATION (AWS)
# =============================================================================
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_CIDR_1=10.0.1.0/24
PUBLIC_SUBNET_CIDR_2=10.0.2.0/24
PRIVATE_SUBNET_CIDR_1=10.0.10.0/24
PRIVATE_SUBNET_CIDR_2=10.0.20.0/24

# Availability Zones
AZ_1=us-east-1a
AZ_2=us-east-1b

# =============================================================================
# TAGS
# =============================================================================
TAG_ENVIRONMENT=development
TAG_PROJECT=mapreduce
TAG_OWNER=devops
TAG_COST_CENTER=engineering
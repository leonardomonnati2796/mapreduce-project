# Configurazione per test MapReduce e Fault Tolerance
# Questo file pu√≤ essere utilizzato per personalizzare i parametri dei test

# === CONFIGURAZIONE CLUSTER ===
# Numero di master nel cluster
MASTER_COUNT=3

# Numero di worker nel cluster  
WORKER_COUNT=3

# Timeout per stabilizzazione cluster (secondi)
CLUSTER_STABILIZATION_TIMEOUT=15

# Timeout per completamento job MapReduce (secondi)
MAPREDUCE_JOB_TIMEOUT=60

# === CONFIGURAZIONE FAULT TOLERANCE ===
# Timeout per rilevamento guasti (secondi)
FAILURE_DETECTION_TIMEOUT=5

# Timeout per recovery (secondi)
RECOVERY_TIMEOUT=10

# Numero di tentativi per recovery
RECOVERY_MAX_RETRIES=3

# === CONFIGURAZIONE TEST ===
# Abilita output verboso
VERBOSE_OUTPUT=true

# Salva log dei test
SAVE_TEST_LOGS=true

# Directory per log dei test
TEST_LOG_DIR=test-logs

# === CONFIGURAZIONE MAPREDUCE ===
# File di input per i test
INPUT_FILES=Words.txt,Words2.txt,Words3.txt

# Directory di output
OUTPUT_DIR=data/output

# Timeout per heartbeat worker (secondi)
WORKER_HEARTBEAT_TIMEOUT=5

# Timeout per task (secondi)
TASK_TIMEOUT=120

# === CONFIGURAZIONE DOCKER ===
# Nome del progetto Docker
DOCKER_PROJECT_NAME=mapreduce-project

# File compose per i test
COMPOSE_FILE=docker/docker-compose.yml

# === CONFIGURAZIONE MONITORAGGIO ===
# Abilita metriche durante i test
ENABLE_METRICS=true

# Porta per metriche
METRICS_PORT=9090

# Abilita dashboard durante i test
ENABLE_DASHBOARD=true

# Porta per dashboard
DASHBOARD_PORT=8080
